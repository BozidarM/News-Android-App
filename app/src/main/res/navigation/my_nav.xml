            android:id="@+id/action_healthFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/scienceFragment"
        android:name="com.example.newsapp.scienceFragment"
        android:label="ScienceNews"
        tools:layout="@layout/fragment_science">
        <action
            android:id="@+id/action_scienceFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/sportsFragment"
        android:name="com.example.newsapp.sportsFragment"
        android:label="SportsNews"
        tools:layout="@layout/fragment_sports">
        <action
            android:id="@+id/action_sportsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/techFragment"
        android:name="com.example.newsapp.techFragment"
        android:label="TechnologyNews"
        tools:layout="@layout/fragment_tech">
        <action
            android:id="@+id/action_techFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>