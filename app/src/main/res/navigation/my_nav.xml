<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.newsapp.homeFragment"
        android:label="NewsApp"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_buisnessFragment"
            app:destination="@id/businessFragment" />
        <action
            android:id="@+id/action_homeFragment_to_entrFragment"
            app:destination="@id/entrFragment" />
        <action
            android:id="@+id/action_homeFragment_to_healthFragment"
            app:destination="@id/healthFragment" />
        <action
            android:id="@+id/action_homeFragment_to_scienceFragment"
            app:destination="@id/scienceFragment" />
        <action
            android:id="@+id/action_homeFragment_to_sportsFragment"
            app:destination="@id/sportsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_techFragment"
            app:destination="@id/techFragment" />
    </fragment>
    <fragment
        android:id="@+id/businessFragment"
        android:name="com.example.newsapp.businessFragment"
        android:label="BusinessNews"
        tools:layout="@layout/fragment_business">
        <action
            android:id="@+id/action_buisnessFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/entrFragment"
        android:name="com.example.newsapp.entrFragment"
        android:label="EntertainmentNews"
        tools:layout="@layout/fragment_entr">
        <action
            android:id="@+id/action_entrFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/healthFragment"
        android:name="com.example.newsapp.healthFragment"
